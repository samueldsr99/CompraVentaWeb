@using Microsoft.AspNetCore.Identity;
@using CompraVenta.ViewModels;
@inject SignInManager<Account> SignInManager
@model AnnouncementsViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper-main">
    <!-- full Title -->
    <div class="full-title">
        <div class="container">
            <!-- Page Heading/Breadcrumbs -->
            <h1 class="mt-4 mb-3">Anuncios</h1>
            <div class="breadcrumb-main">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                    </li>
                </ol>
            </div>
        </div>
    </div>

    <div class="blog-main">
        <div class="container">
            <div class="row">
                <!-- Blog Entries Column -->
                <div class="col-md-8 blog-entries">
                    @{ 
                        int it = 0;
                    }
                    @foreach (var announce in Model.Announcements)
                    {
                        if (it < Model.FirstAnnounceOnPage())
                        {
                            it++;
                            continue;
                        }
                        else if (it > Model.LastAnnounceOnPage())
                        {
                            break;
                        }
                        it++;
                        <!-- Blog Post -->
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="by-post">
                                    Publicado el @announce.Date por <a asp-action="AccountDetails" asp-controller="Account" asp-route-userName="@announce.SellerUserName">@announce.SellerUserName</a>.
                                </div>
                                <h2 class="card-title">@announce.Title</h2>
                                @{
                                    string Summary;
                                    if (announce.Description.Length > 30)
                                    {
                                        int len = Math.Min(150, announce.Description.Length);
                                        Summary = announce.Description.Substring(0, len) + "...";
                                    }
                                    else
                                    {
                                        Summary = announce.Description;
                                    }
                                }
                                <p class="card-text">@Summary</p>
                                <h5 class="card-title">Precio: $@announce.Price</h5>
                                <a asp-action="AnnouncementDetails" asp-route-id="@announce.Id" asp-controller="Announcement" class="btn btn-primary">
                                    Saber más &rarr;
                                </a>
                            </div>
                        </div>
                    }
                    <div class="pagination_bar_arrow">
                        <!-- Pagination -->
                        <ul class="pagination justify-content-center mb-4">
                            <li class="page-item">
                                @{ 
                                    int prev = Model.Page - 1;
                                    int next = Model.Page + 1;
                                }
                                @if (Model.Page == 1)
                                {
                                    <a class="page-link disabled">&larr; Older</a>
                                }
                                else
                                {
                                    <a class="page-link" asp-action="Announcements" asp-controller="Announcement" asp-route-Page="@prev">&larr; Older</a>
                                }
                            </li>
                            <li class="page-item">
                                @if (Model.IsLastPage())
                                {
                                    <a class="page-link disabled">Newer &rarr;</a>
                                }
                                else
                                {
                                    <a class="page-link" asp-action="Announcements" asp-controller="Announcement" asp-route-page="@next">Newer &rarr;</a>
                                }
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Sidebar Widgets Column -->
                <div class="col-md-4 blog-right-side">
                    <!-- Search Widget -->
                    <form method="post" asp-action="Search" asp-controller="Announcement" class="card mb-4">
                        <h5 class="card-header">Buscar:</h5>
                        <div class="card-body">
                            <div class="input-group">
                                <input type="text" asp-for="SearchText" class="form-control" placeholder="Texto...">
                                <span class="input-group-btn">
                                    <button class="btn btn-secondary" type="submit">Go</button>
                                </span>
                            </div>
                        </div>
                    </form>
                    <!-- Side Widget -->
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div class="card my-auto">
                            <h5 class="card-header">
                                Anuncie su artículos:
                                <a class="pull-right btn btn-secondary" asp-action="Announce" asp-controller="Announcement">Anunciar</a>
                            </h5>
                        </div>
                    }
                    <!-- Categories Widget -->
                    <form method="post" asp-action="Filter" asp-controller="Announcement">
                        <div class="card my-4">
                            <h5 class="card-header">Filtrar por:</h5>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <ul class="list-unstyled mb-0">
                                            <li>
                                                <button class="btn btn-dark" asp-action="Filter" type="submit" asp-route-category="Hogar">Hogar</button>
                                            </li>
                                            <li>
                                                <button class="btn btn-dark" asp-action="Filter" type="submit" asp-route-category="Vivienda">Vivienda</button>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col-lg-6">
                                        <ul class="list-unstyled mb-0">
                                            <li>
                                                <button class="btn btn-dark" asp-action="Filter" type="submit" asp-route-category="Autos">Autos</button>
                                            </li>
                                            <li>
                                                <button class="btn btn-dark" asp-action="Filter" type="submit" asp-route-category="Electronico">Electrónico</button>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </div>
</div>

